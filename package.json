{
  "name": "dotimation",
  "version": "0.2.1",
  "description": "Animate anything with dots",
  "homepage": "https://github.com/TheeKia/dotimation#readme",
  "bugs": {
    "url": "https://github.com/TheeKia/dotimation/issues"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheeKia/dotimation.git"
  },
  "scripts": {
    "build": "bunup --minify --footer '// built with love'",
    "dev": "bun run --cwd test/ui dev",
    "postinstall": "bun simple-git-hooks",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "release": "bumpp --commit --push --tag",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "^1.3.0",
    "@types/react": "^19.2.2",
    "bumpp": "^10.3.1",
    "bunup": "^0.15.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.90.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "workspaces": [
    "test/**"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run type-check"
  },
  "types": "./dist/index.d.ts"
}
